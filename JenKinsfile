pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/save007854/react-test.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    docker.build('your-react-app-image')
                }
            }
        }

        stage('Deploy to Portainer') {
            steps {
                script {
                    docker.withRegistry('docker.io', 'your-registry-credentials') {
                        docker.image('your-react-app-image').push()
                    }

                    sh 'docker-compose -f docker-compose.yml up -d'
                }
            }
        }
    }
}
