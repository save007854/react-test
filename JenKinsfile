pipeline {

    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                // Make sure 'docker' is recognized in this context
                script {
                    docker.image('your-docker-image').inside {
                    }
                }
            }
        }
    }
        stage('Build and Dockerize') {
            steps {
                script {
                    docker.build("your-react-app-image")
                }
            }
        }

        stage('Push to Registry') {
            steps {
                script {
                    docker.withRegistry('https://your-docker-registry', 'your-docker-credentials') {
                        docker.image("your-react-app-image").push()
                    }
                }
            }
        }
    }
